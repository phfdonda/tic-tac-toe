#!/usr/bin/env ruby
# frozen_string_literal: true

require '../lib/table.rb'
require '../lib/player.rb'
require '../lib/game.rb'


def pretty_intro
  system 'clear'
  puts ' WELCOME! '.center(100, '.')
  sleep 1.0
  puts ' I love that you are here! '.center(100, '.')
  puts ''.center(100, '.')
  sleep 1.8
  puts ' Since we are all together, how about we play a game? '.center(100, '.')
  sleep 1.0
  puts ' I may be old, but I can be fun! '.center(100, ' ')
  puts ' But where are my manners? Let us introduce ourselves! '.center(100, ' ')
  sleep 1.0
  puts ' My name is Tic-Tac-Toe. My pleasure! '.center(100, ' ')
  sleep 1.0
end

pretty_intro
game = Game.new

